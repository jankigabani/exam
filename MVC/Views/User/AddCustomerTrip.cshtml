@model Repositories.Models.tblCustomer

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <title>Book Your Trip</title>
</head>

<body>
    <div class="container mt-5">
        <h2>Book Your Trip Now, @Context.Session.GetString("username")!</h2>
        <h2>Your ID, @Context.Session.GetString("userid")!</h2>

        <form asp-action="AddCustomerTrip" method="post">
            <div class="form-group">
                <label asp-for="c_ticketid" class="control-label">Ticket ID:</label>
                <input asp-for="c_ticketid" class="form-control" readonly />
                <span asp-validation-for="c_ticketid" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="c_userid" class="control-label">User ID:</label>
                <input asp-for="c_userid" class="form-control" value="@Context.Session.GetString("userid")" readonly />
                <span asp-validation-for="c_userid" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="c_trip" class="control-label">Trip:</label>
                <input asp-for="c_trip" class="form-control" readonly />
                <span asp-validation-for="c_trip" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="c_price" class="control-label">Price:</label>
                <input asp-for="c_price" class="form-control" type="number" readonly />
                <span asp-validation-for="c_price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="c_currentstock" class="control-label">Available tickets:</label>
                <input asp-for="c_currentstock" class="form-control" type="number" readonly />
                <span asp-validation-for="c_currentstock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="c_tripdate" class="control-label">Trip Date:</label>
                <input asp-for="c_tripdate" class="form-control" type="date" />
                <span asp-validation-for="c_tripdate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="c_ticketqnt" class="control-label">Ticket Quantity:</label>
                <input asp-for="c_ticketqnt" class="form-control" type="number" oninput="calculateTotalCost()" />
                <span asp-validation-for="c_ticketqnt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="c_totalcost" class="control-label">Total Cost :</label>
                <input asp-for="c_totalcost" class="form-control" type="number" readonly />
                <span asp-validation-for="c_totalcost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-info">Book Trip</button><br>
                <a asp-action="Dashboard" class="mt-3 btn btn-danger">Back to List</a>
            </div>
        </form>


    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        function calculateTotalCost() {
            var c_price = document.getElementById("c_price").value;
            var quantity = document.getElementById("c_ticketqnt").value;
            var totalCost = c_price * quantity;
            document.getElementById("c_totalcost").value = totalCost;
        }
    </script>


</body>

</html>