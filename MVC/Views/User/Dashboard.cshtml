@model List<Repositories.Models.tblAdmin>
<h2>@Context.Session.GetString("username")</h2>
<a asp-controller="User" asp-action="Logout" class="btn btn-danger">Logout</a><br><br>
<h5>Available Trips</h5>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Bus Id</th>
                <th>Trip</th>
                <th>Price</th>
                <th>Available Tickets</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bus in Model)
            {
                <tr>
                    <td>@bus.c_ticketid</td>
                    <td>@bus.c_trip</td>
                    <td>@bus.c_price</td>
                    <td>@bus.c_currentstock</td>
                    <td>
                        <a asp-action="AddCustomerTrip" asp-route-id="@bus.c_ticketid" class="btn btn-success">Book Trip</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="GetCustomerTripDetails" class="btn btn-primary">View Booked Trips</a>
